    .container
        .row.mBottom-20
            .col-md-12
                h2(style="font-family: 'oswaldregular', sans-serif;") Mis inmuebles
        .row.mBottom-20
            .col-md-6
                .input-group
                    label.input-group-addon(for="search") Buscar
                    input.form-control(type='search' placeholder='Ingresa una descripci√≥n' style="height:100%;text-align:left;" id="search" maxlength="26" ng-model="search")
        .row.mBottom-20
            .col-md-12
                .grid-inmueble-show(ng-pagination="posts in post | orderBy:'-order' | filter:search" ng-pagination-size="18")
                    .row
                        .col-md-1
                            img(class="img-inmueble-search" src="/uploads/{{posts._id}}_1.{{posts.ext_1}}")
                            
                        .col-md-5
                            .info-inmueble-search
                                h5 {{posts.estado}}, {{posts.ciudad}}, {{posts.municipio}}, {{posts.urbanizacion}}
                                p {{posts.tipo}}  /  {{posts.categoria}} / {{posts.date}}
                        .col-md-3
                            .price-inmueble-search
                                h5 Bs. {{posts.precio}}
                                p 13 visitas
                        .col-md-3
                            .btn-controls-inmueble-search
                                span(class="pausar_controls_item_mostar") Pausar
                                a(class="editar_controls_item_mostar" href="/api/post/{{posts._id}}/edit") Editar
                                span(class="eliminar_controls_item_mostar" ng-click="deletePost(posts._id)") Eliminar
        .row.mBottom-20
            .col-md-6.col-md-offset-3
                center
                    ng-pagination-control(pagination-id="post")
                        












